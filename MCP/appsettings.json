{
  "MCP": {
    "ServerUrl": "https://your-server-url.azurewebsites.net"
  },
  "Branding": {
    "CompanyName": "Your Company",
    "ProductName": "MCP Server",
    "PrimaryColor": "#0066cc",
    "PrimaryHoverColor": "#0052a3"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "YOUR-TENANT-ID-HERE",
    "ClientId": "YOUR-CLIENT-ID-HERE",
    "ClientSecret": "YOUR-CLIENT-SECRET-HERE",
    "Scope": "api://YOUR-CLIENT-ID-HERE/MCP.Access"
  },
  "Jwt": {
    "SigningKey": "YOUR-JWT-SIGNING-KEY-HERE",
    "EncryptionKey": "YOUR-JWT-ENCRYPTION-KEY-HERE",
    "ExpirationMinutes": "60"
  },
  "TokenStore": {
    "Provider": "InMemory",
    "_ProviderOptions": "InMemory | AzureTableStorage",
    "AzureTableStorage": {
      "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net",
      "TableName": "TokenMappings"
    }
  },
  "ClientStore": {
    "Provider": "InMemory",
    "_ProviderOptions": "InMemory | AzureTableStorage",
    "AzureTableStorage": {
      "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net",
      "TableName": "ClientRegistrations"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MCP": "Debug"
    }
  },
  "OAuth": {
    "ValidateRedirectUris": false
  },
  "AllowedHosts": "*"
}
